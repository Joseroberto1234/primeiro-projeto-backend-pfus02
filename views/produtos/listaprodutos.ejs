<!-- Cabeçalho principal -->
<%- include('../partials/header') %>

<!-- Conteúdo do index -->
<main class="container text-center mt-3">
    <h1>LISTA DE PRODUTOS</h1>
    
    <a href="/produtos/cadastrar">
        <button class="btn btn-lg btn-primary mb-4">
            <i class="bi bi-plus-circle"></i>
            Cadastrar
        </button>
    </a>

    <div class="d-flex flex-row flex-wrap gap-3 justify-content-center">
        <% if (produtos && produtos.length > 0) { %>
            <% produtos.forEach(produto => { %>
                <div class="card border-dark text-bg-dark" style="width: 18rem;">
                    <img src="<%= produto.imagem %>" class="card-img-top" alt="Imagem do produto" height="230">
                    <div class="card-body text-start">
                        <h5 class="card-title"><%= produto.nome %></h5>
                        <p class="card-text"><b>Descrição:</b> <%= produto.descricao %></p>
                        <p class="card-text"><b>Tipo:</b> <%= produto.categoria %></p>
                        <p class="card-text"><b>Preço:</b> R$ <%= produto.preco %></p>
                        <p class="card-text"><b>Quantidade:</b> <%= produto.quantidade %></p>

                        <!-- Botões de ação -->
                        <div class="d-flex justify-content-center">
                            <!-- Botão de editar -->
                            <a href="/produtos/<%= produto.id %>" style-decoration: none;">
                                <button class="btn btn-sm btn-warning me-2">
                                    <i class="bi bi-pencil-square"></i>
                                    Editar
                                </button>   
                            </a>

                            <!-- Botão de deletar -->
                            <button class="btn btn-sm btn-danger" onclick="confirmaExclusao('<%= produto.nome %>', '<%= produto.id %>')">
                                <i class="bi bi-trash"></i>
                                Excluir
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <!-- Mostra uma mensagem, caso não tenha produto cadastrado -->
            <div class="alert alert-warning text-center mt-5">
                Nenhum produto cadastrado no momento.
            </div>
        <% } %>
    </div>
</main>

<!-- Script para função de deletar -->
<script>
    function confirmaExclusao(nomeProduto, id) {
        if (confirm(`Deseja realmente excluir o produto ${nomeProduto}?`)) {
            window.location.href = `/produtos/deletar/${id}`;
        }
    }
</script>

<!-- Rodapé de todas as páginas -->
<%- include('../partials/footer') %>
